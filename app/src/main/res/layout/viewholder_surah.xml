<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/dark_woodsmoke">

    <TextView
        android:id="@+id/surahId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/chapter_number_background"
        android:text="@string/surah_number"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/persian_green"
        android:textSize="13sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/surahId"
        app:layout_constraintStart_toEndOf="@+id/surahId"
        app:layout_constraintTop_toTopOf="@+id/surahId">

        <TextView
            android:id="@+id/latin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surah_latin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/surah_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surah_info"
            android:textColor="@color/stonewall"
            android:textSize="14sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/arabic"
        android:layout_width="104dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="54sp"
        android:text="@string/surah_arabic"
        android:fontFamily="@font/quran_surah_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>